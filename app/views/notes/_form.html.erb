<%= form_for([@current_user, @note], remote: :true) do |form| %>
    <fieldset style='width: 295px'>
        <%= form.hidden_field :user_id, value: @current_user.id %>
        <div class="field">
            <%= form.label :title, 'Title' %>
            <%= form.text_field :title, :size => 40 %>
        </div>
        <div class="actions">
            <%= form.submit %>
        </div>
  </fieldset>
<% end %>